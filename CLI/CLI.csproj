<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <Title>MoBro Plugin CLI</Title>
        <Description>CLI to publish and install MoBro plugins</Description>
        <Authors>ModBros</Authors>
        <Company>ModBros KG</Company>
        <Product>MoBro</Product>
        <Copyright>(C) ModBros KG 2023</Copyright>
        <OutputType>exe</OutputType>
        <IsPackable>true</IsPackable>
        <PackAsTool>true</PackAsTool>
        <ToolCommandName>mobro</ToolCommandName>
        <TargetFrameworks>net7.0;net8.0</TargetFrameworks>
        <LangVersion>12</LangVersion>
        <RuntimeIdentifiers>win-x64</RuntimeIdentifiers>
        <RootNamespace>MoBro.Plugin.Cli</RootNamespace>
        <VersionPrefix>0.2.0</VersionPrefix>
        <Nullable>enable</Nullable>
        <ImplicitUsings>enable</ImplicitUsings>
        <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
        <GenerateDocumentationFile>true</GenerateDocumentationFile>
        <PackageId>MoBro.Plugin.CLI</PackageId>
        <AssemblyName>MoBro.Plugin.CLI</AssemblyName>
        <InvariantGlobalization>true</InvariantGlobalization>
        <PackageProjectUrl>https://developer.mobro.app/plugins/intro</PackageProjectUrl>
        <RepositoryUrl>https://github.com/ModBros/mobro-plugin-cli</RepositoryUrl>
        <PackageLicenseExpression>MIT</PackageLicenseExpression>
        <PackageTags>MoBro</PackageTags>
        <ApplicationIcon>Resources\mobro.ico</ApplicationIcon>
        <PackageIcon>mobro.png</PackageIcon>
    </PropertyGroup>

    <ItemGroup>
        <PackageReference Include="CommandLineParser" Version="2.9.1"/>
        <PackageReference Include="Refit" Version="7.2.22" />
    </ItemGroup>

    <ItemGroup>
        <None Include="Resources\mobro.png" Pack="true" PackagePath=""/>
    </ItemGroup>

</Project>
